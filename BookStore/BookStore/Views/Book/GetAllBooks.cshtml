@{
    ViewData["Title"] = "All Books";
}

@model IEnumerable<BookModel>

@{
    var parameters = new Dictionary<string, string>()
{
        {"name","nitish" },
        {"company","webgentle" },
        {"appName","bookstore" }
    };
}

<div class="container">
    <h1 class="display-4">All Books</h1>
    <div class="row">

        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"></svg>
                    <div class="card-body">
                        <h4 class="card-title">@book.Title</h4>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="book" asp-action="getbook"
                                   asp-route-id="@book.Id" asp-route-nameOfBook="@book.Title"
                                   class="btn btn-outline-secondary">View details</a>

                                <a asp-route="bookDetailsRoute"
                                   asp-route-id="@book.Id"
                                   class="btn btn-outline-secondary">Named Routes</a>

                                <a asp-controller="book" asp-action="getbook"
                                   asp-route-id="@book.Id" asp-route-nameOfBook="@book.Title"
                                   class="btn btn-outline-secondary" asp-all-route-data="@parameters">All route data</a>

                                <a asp-controller="book" asp-action="getbook"
                                   asp-route-id="@book.Id" asp-fragment="similarBooks"
                                   class="btn btn-outline-secondary">Similar Books</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

