@{
    ViewData["Title"] = "Home";
}
@inject BookStore.Repository.IBookRepository _bookRepository;

<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome to Bookstore</h1>

        <p class="lead text-muted">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Itaque culpa debitis
            accusantium saepe eos qui iure sed possimus amet ad provident totam veniam animi
            odit ipsa dolorum tempore, eligendi laboriosam ipsum excepturi beatae quis,
            consectetur voluptatem voluptatum! Omnis, asperiores.
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search books</a>
        </p>
        @foreach (var item in await _bookRepository.GetAllBooks())
        {
            <h2>@item.Title</h2>
        }
    </div>
</section>

<div class="py-5 bg-light">
    <div class="container">
        <h3 class="h3">Top books</h3>

        <hr />
        <p>Method 1</p>
        @await Component.InvokeAsync("TopBooks", new { count = 3 })

        <hr />
        <p>Method 2</p>
        <vc:top-books count="3"></vc:top-books>


    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            //alert("document is ready");
        })
    </script>
}



